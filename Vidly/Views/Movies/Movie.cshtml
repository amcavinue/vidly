@model Vidly.Models.Movie
@{
    ViewBag.Title = "Movie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
    <li>Genre: @Model.Genre.Name</li>
    <li>Release Date: @Model.ReleaseDate.ToString("ddd, MMMM dd, yyyy")</li>
    <li>Date Added: @Model.DateAdded.ToString("ddd, MMMM dd, yyyy")</li>
    <li>Number in Stock: @Model.Stock</li>
</ul>